@model dynamic

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>Profile</h2>
                </div>
                <div class="card-body">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.ProfileImage))
                                {
                                    <img src="@Model.ProfileImage" alt="Profile" class="img-fluid rounded-circle mb-3" />
                                }
                            </div>
                            <div class="col-md-8">
                                <h4>Welcome @Model.Name!</h4>
                                <p>Email: @Model.EmailAddress</p>
                                <ul class="list-group mb-3">
                                    <li class="list-group-item">
                                        <a asp-controller="Customers" asp-action="Profile">View Profile</a>
                                    </li>
                                    <li class="list-group-item">
                                        <a asp-controller="Customers" asp-action="OrderHistory">Order History</a>
                                    </li>
                                    @if (!Model.IsCustomerRegistered)
                                    {
                                        <li class="list-group-item">
                                            <a asp-controller="Customers" asp-action="Register">Register a New Customer</a>
                                        </li>
                                    }
                                </ul>
                                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>Please <a asp-controller="Account" asp-action="Login">log in</a> to view your profile.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
