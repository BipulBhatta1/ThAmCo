@model ThAmCo.Customers.Models.Product

@{
    ViewData["Title"] = "Product Detail";
}

<div class="container">
    <h2>Product Details</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
            <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
            <p class="card-text"><strong>Brand:</strong> @Model.Brand?.Name</p>

            @if (!(bool)ViewData["IsGuestUser"])
            {
                <a asp-controller="Orders" asp-action="Create" asp-route-productId="@Model.Id" class="btn btn-success">Order
                    Now</a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Login to Order</a>
            }

            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
